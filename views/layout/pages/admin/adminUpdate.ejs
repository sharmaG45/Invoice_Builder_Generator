<main class="main-content mt-0">
  <div
    class="page-header align-items-start min-vh-50 pt-5 pb-11 m-3 border-radius-lg"
    style="
      background-image: url('https://raw.githubusercontent.com/creativetimofficial/public-assets/master/argon-dashboard-pro/assets/img/signup-cover.jpg');
      background-position: top;
    "
  >
    <span class="mask bg-gradient-dark opacity-6"></span>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5 text-center mx-auto">
          <h1 class="text-white mb-2 mt-5">Welcome!</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row mt-lg-n10 mt-md-n11 mt-n10 justify-content-center">
      <div class="col-xl-4 col-lg-5 col-md-7 mx-auto">
        <div class="card z-index-0">
          <div class="card-header text-center pt-4">
            <h5>Update the user details</h5>
          </div>
          <div class="card-body">
            <form action="/update/<%= user._id %>" method="post">
              <div class="mb-3">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Name"
                  name="name"
                  aria-label="Name"
                  value="<%= user.name %>"
                  required
                />
              </div>
              <div class="mb-3">
                <input
                  type="text"
                  class="form-control"
                  placeholder="Phone"
                  name="phone"
                  aria-label="Phone"
                  value="<%= user.phone %>"
                  required
                />
              </div>
              <div class="mb-3">
                <input
                  type="email"
                  class="form-control"
                  placeholder="Email"
                  name="email"
                  aria-label="Email"
                  value="<%= user.email %>"
                  required
                />
              </div>
              <div class="text-center">
                <button
                  type="submit"
                  class="btn bg-gradient-dark w-100 my-4 mb-2"
                >
                  Update
                </button>
              </div>
              <p class="text-sm mt-3 mb-0">
                <a
                  href="/delete/<%= user._id %>"
                  class="text-danger font-weight-bolder"
                  >Delete User</a
                >
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

